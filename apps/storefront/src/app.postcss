/* Write your global styles here, in PostCSS syntax */
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans');
@import url('https://fonts.googleapis.com/css2?family=Indie+Flower');

@tailwind base;
@tailwind components;
@tailwind utilities;

* {
	@apply box-border;
}

body {
	text-color: light-dark (@apply text-gray-800, @apply text-white);

	@apply bg-surface-100;
	@apply font-noto;
}

img,
picture,
video,
canvas,
svg {
	display: block;
	max-width: 100%;
}
